<div
  class="card col-lg-10 col-md-10 col-sm-10 mt-5 bg-dark bg-gradient text-white customCard"
>
  <div class="card-body">
    <h4 class="card-title">
      Edit Post
    </h4>
    <hr />
    <form class="card-body">
      <label class="form-label" for="post-title">Title</label>
      <div class="input-group mb-3">
        <input
          name="post-title"
          type="text"
          class="form-control"
          value="{{post.title}}"
          aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default"
        />
      </div>

      <label class="form-label" for="content">Content</label>
      <div class="input-group mb-3">
        <input
          name="content"
          class="form-control"
          value="{{post.content}}"
          aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default"
        />
      </div>
      <div class="d-grid gap-2">
        <button type="submit" class="btn btn btn-secondary">Update Post</button>
      </div>
      <div class="d-grid gap-2">
        <button type="button" class="btn btn btn-secondary">Delete</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>